<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF">

<LinearLayout
    android:id="@+id/linear_layout2"
    android:layout_margin="40dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_org"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:padding="30dp"
        android:id="@+id/orgname"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

<TextView
    android:textStyle="bold"
    android:textSize="25sp"
    android:paddingTop="20dp"
    android:textColor="#111"
    android:layout_alignStart="@id/linear_layout2"
    android:id="@+id/orgnameField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/linear_layout2"/>

<TextView
    android:textStyle="bold"
    android:textSize="20sp"
    android:paddingTop="20dp"
    android:layout_alignStart="@id/linear_layout2"
    android:id="@+id/descriptionField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/orgnameField"/>

<TextView
    android:textStyle="bold"
    android:paddingTop="20dp"
    android:textSize="20sp"
    android:layout_alignStart="@id/linear_layout2"
    android:id="@+id/htmlUrl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/descriptionField"/>

<TextView
    android:clickable="true"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:paddingTop="20dp"
    android:textSize="20sp"
    android:layout_alignStart="@id/linear_layout2"
    android:id="@+id/publicRepoNumField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/htmlUrl"/>

<TextView
    android:clickable="true"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:paddingTop="20dp"
    android:textSize="20sp"
    android:layout_alignStart="@id/linear_layout2"
    android:id="@+id/orgPublicMembersField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/publicRepoNumField"/>

<TextView
    android:clickable="true"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:paddingTop="20dp"
    android:textSize="20sp"
    android:layout_alignStart="@id/linear_layout2"
    android:id="@+id/orgMembersField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/orgPublicMembersField"/>

</RelativeLayout>