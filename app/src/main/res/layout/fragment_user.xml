<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:padding="30dp"
            android:id="@+id/username"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:textColor="#111"
        android:layout_alignStart="@id/linear_layout1"
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout1"/>

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:layout_alignStart="@id/linear_layout1"
        android:id="@+id/bioField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameField"/>

    <TextView
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:layout_alignStart="@id/linear_layout1"
        android:id="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bioField"/>

    <TextView
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:layout_alignStart="@id/linear_layout1"
        android:id="@+id/repoNumField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailField"/>

    <TextView
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:layout_alignStart="@id/linear_layout1"
        android:id="@+id/followersField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repoNumField"/>

    <TextView
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:layout_alignStart="@id/linear_layout1"
        android:id="@+id/followingField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/followersField"/>

</RelativeLayout>